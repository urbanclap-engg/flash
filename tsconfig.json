{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "sourceMap": false,
    "lib": [
      "ES6",
      "ES2017",
      "dom"
    ],
    "outDir": "dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "alwaysStrict": true, // till all modules are refactored
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/"
      ],
      "typings/*": [
        "src/typings/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "test/**/*.ts"
  ]
}